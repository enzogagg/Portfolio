{
  "name": "portfolio-enzo-gaggiotti",
  "version": "2.1.0",
  "description": "Enzo Gaggiotti's Personal Portfolio",
  "private": true,
  "scripts": {
    "start": "cd frontend && python3 -m http.server 8000",
    "dev": "cd frontend && python3 -m http.server 8000",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "npx stylelint 'frontend/assets/css/**/*.css' --config ./config/.stylelintrc.json",
    "lint:css:fix": "npx stylelint 'frontend/assets/css/**/*.css' --fix --config ./config/.stylelintrc.json",
    "lint:js": "npx eslint 'frontend/assets/js/**/*.js' --config ./config/.eslintrc.js",
    "lint:js:fix": "npx eslint 'frontend/assets/js/**/*.js' --fix --config /config/.eslintrc.js",
    "lint:fix": "npm run lint:css:fix && npm run lint:js:fix",
    "lint:report": "npm run lint 2>&1 | tee lint-report.txt",
    "format": "npx prettier --write '**/*.{html,css,js,json,md}'",
    "format:check": "npx prettier --check '**/*.{html,css,js,json,md}'",
    "build": "echo 'ğŸ“¦ Static project - no build required'",
    "preview": "npm run start",
    "validate": "npm run format:check && npm run lint && npm run test:coverage && npm run test:e2e",
    "test": "jest --config=../config/jest.config.js",
    "test:coverage": "jest --coverage --config=./config/jest.config.js",
    "test:watch": "jest --watchAll --config=./config/jest.config.js",
    "test:e2e": "playwright test --config=./config/playwright.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/enzogagg/Portfolio.git"
  },
  "keywords": [
    "portfolio",
    "frontend",
    "infrastructure",
    "devops"
  ],
  "author": {
    "name": "Enzo Gaggiotti",
    "email": "enzo.gaggiotti@epitech.eu",
    "url": "https://portfolio.ega.ovh"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@playwright/test": "^1.56.1",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.0",
    "stylelint": "^16.6.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
